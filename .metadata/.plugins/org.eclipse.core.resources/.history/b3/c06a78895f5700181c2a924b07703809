<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Client</title>
</head>
<body>
	<!-- Céation du bean client et initialisation des attributs -->
	<jsp:useBean id="client" class="com.beans.Client" scope="request" />
	<jsp:setProperty property="nom" name="client" param="nomClient"/>
	<jsp:setProperty property="prenom" name="client" param="prenomClient"/>
	<jsp:setProperty property="adresse" name="client" param="adresseClient"/>
	<jsp:setProperty property="tel" name="client" param="telephoneClient"/>
	<jsp:setProperty property="email" name="client" param="emailClient"/>
	
	<!-- Afficher une erreur si au moins un champ est vide -->
	${ (empty client.nom || empty client.prenom || empty client.adresse || empty client.tel || empty client.email ) ? "<span>Erreur - Vous n'avez pas rempli tous les champs obligatoire.</span>" : " " }
	
	<!-- Afficher les infos -->
	<p>Nom : ${ client.nom }</p>
	<p>Prénom : ${ client.prenom }</p>
	<p>Adresse : ${ client.adresse }</p>
	<p>Tel : ${ client.tel }</p>
	<p>EMail : ${ client.email }</p>
</body>
</html>